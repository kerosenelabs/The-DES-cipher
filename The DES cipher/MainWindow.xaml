<Window x:Class="The_DES_cipher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_DES_cipher"
        FontFamily="Cascadia Code"
        mc:Ignorable="d"
        Title="DES \ Главная" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid Background="#191919">
        <StackPanel VerticalAlignment="Center">
            <Button Background="Transparent" BorderThickness="1" BorderBrush="#add5ff" Content="Шифрование текста" Width="300" Foreground="#dfdfdf" Margin="5" Cursor="Hand" Click="Button_Click"/>
            <Button Background="Transparent" BorderThickness="1" BorderBrush="#ffd7ad" Content="Шифрование файлов" Width="300" Foreground="#dfdfdf" Margin="5" Cursor="Hand" Click="Button_Click_1"/>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="Pages"/>
    </Grid>
</Window>
